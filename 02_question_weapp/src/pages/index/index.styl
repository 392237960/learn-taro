.index
  .title
    width 100%
    background-color #cccccc
    text-align center
    font-size 24PX
    height 60PX
    line-height 60PX
  .btn-add-question
    position fixed
    left 0
    right 0
    bottom 0
    border-radius 0
    color #ffffff
    background #51B54D
  .question-list
    margin-top 10PX
    font-size 14PX
    .question
      margin 20PX 0
      padding 0 10PX
      display flex
      flex-direction row
      width 100%
      justify-content: space-between
      .question-left
        width 100%
      .question-title
        font-size 18PX
        color #333
      .question-desc
        margin-top 5PX
        color #888
      .question-right
        width 100PX
        height 80PX
        display: flex
        flex-direction column
        align-items center
        justify-content space-between
        .img
          width 28PX
          height 28PX
